<h1>Listing cars</h1>

<table>
  <tr>
    <th>Name</th>
    <% @cars.reject{|c| c.name == "Hotel Shuttle"}.map(&:num_seats).max.times do |i| %>
      <th>Passenger</th>
    <% end %>
  </tr>

<% @cars.each do |car| %>
  <tr>
    <td><%= car.name %></td>
    <% car.arrivals.each do |arr| %>
      <td><%= arr.traveler_name %>: <%= arr.time %></td>
    <% end %>
