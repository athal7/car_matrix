<%= form_for @flight, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :traveler_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :traveler_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :flight_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :flight_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :airline, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :airline, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :flight_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :flight_time, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :arrival, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :arrival, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                flights_path, :class => 'btn' %>
  </div>
<% end %>
