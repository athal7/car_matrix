<%- model_class = Flight -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:traveler_name) %></th>
      <th><%= model_class.human_attribute_name(:flight_number) %></th>
      <th><%= model_class.human_attribute_name(:airline) %></th>
      <th><%= model_class.human_attribute_name(:flight_time) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.traveler_name %></td>
        <td><%= flight.flight_number %></td>
        <td><%= flight.airline %></td>
        <td><%= flight.flight_time %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_flight_path(flight), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => "Delete"),
                      flight_path(flight),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_flight_path,
            :class => 'btn btn-primary' %>
