<h1>Listing flights</h1>

<table>
  <tr>
    <th>Traveler name</th>
    <th>Flight number</th>
    <th>Airline</th>
    <th>Flight time</th>
    <th>Arrival</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flights.each do |flight| %>
  <tr>
    <td><%= flight.traveler_name %></td>
    <td><%= flight.flight_number %></td>
    <td><%= flight.airline %></td>
    <td><%= flight.flight_time %></td>
    <td><%= flight.arrival %></td>
    <td><%= link_to 'Show', flight %></td>
    <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
    <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

