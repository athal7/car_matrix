<%- model_class = Flight -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:car_id) %>:</strong></dt>
  <dd><%= @flight.car_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:traveler_name) %>:</strong></dt>
  <dd><%= @flight.traveler_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:flight_number) %>:</strong></dt>
  <dd><%= @flight.flight_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:airline) %>:</strong></dt>
  <dd><%= @flight.airline %></dd>
  <dt><strong><%= model_class.human_attribute_name(:flight_time) %>:</strong></dt>
  <dd><%= @flight.flight_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:arrival) %>:</strong></dt>
  <dd><%= @flight.arrival %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              flights_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_flight_path(@flight), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              flight_path(@flight),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
