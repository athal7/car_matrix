<%= form_for @project, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :timezone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :timezone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :max_flight_difference, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :max_flight_difference, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :future_display_dates, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :future_display_dates, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :past_display_dates, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :past_display_dates, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                projects_path, :class => 'btn' %>
  </div>
<% end %>
